unit uSnippets;

interface
uses
  System.Classes;

  //Arrays
  procedure uSnippets_Array_Delete_Item(var vArray: array; const Index: Cardinal);

implementation

procedure uSnippets_Array_Delete_Item(var vArray: array; const Index: Cardinal);
var
  ALength: Cardinal;
  i: Cardinal;
begin
  ALength := Length(A);
  Assert(ALength > 0);
  Assert(Index < ALength);
  for i := Index + 1 to ALength - 1 do
    A[i - 1] := A[i];
  SetLength(A, ALength - 1);
end;

end.
