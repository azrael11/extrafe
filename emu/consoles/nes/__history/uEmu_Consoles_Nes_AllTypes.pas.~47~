type
  TEMU_NES_MAME = record
    Name: String;
    Path: String;
    Ini: TEMU_NES_MAME_INI;
    p_Ini: TIniFile;
    p_Ini_Path: String;
    p_Ini_Name: String;
    Media: TEMU_NES_MEDIA_FILES;
    Database: String;
  end;

type
  TEMU_NES_GAMELIST = record
    total_games: Integer;
    games: TStringList;
    roms: TStringList;
    year: TStringList;
    publisher: TStringList;
  end;

type
  TEMU_NES = record
    gamelist: TEMU_NES_GAMELIST;
    puNes: TEMU_NES_PUNES;
    iNes: TEMU_NES_INES;
    Nestopia: TEMU_NES_NESTOPIA;
    Mame: TEMU_NES_MAME;
  end;

var
  nes: TEMU_NES;

