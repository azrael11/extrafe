      vMame.install.Computer.Panel.Visible:= True;

      vMame.install.Computer.Header:= TPanel.Create(vMame.install.Computer.Panel);
      vMame.install.Computer.Header.Name:= 'Emu_Arcade_Mame_Install_Computer_Panel_Header';
