  vMame.Config.Panel.Advance.Labels[1].Position.Y:= 22;
  vMame.Config.Panel.Advance.Labels[1].Position.X:= vMame.Config.Scene.Right_Panels[2].Width- vMame.Config.Panel.Advance.Labels[1].Width- 10;
