  procedure uEmu_Arcade_Mame_Config_Advanced_ButtonClick(vName: String);
  procedure uEmu_Arcade_Mame_Config_Advanced_ComboboxChange(vName: String);
  procedure uEmu_Arcade_Mame_Config_Advanced_OpenDialogOnClose;

