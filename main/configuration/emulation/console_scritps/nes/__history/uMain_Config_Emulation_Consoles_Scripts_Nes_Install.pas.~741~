procedure uEmulation_Consoles_Nes_Install;
var
  vi: Integer;
begin
  extrafe.prog.State := 'main_config_install_emulator';
  Nes.Main.Status := 'phase_1';

  mainScene.Config.Main.Left_Blur.Enabled := True;
  mainScene.Config.Main.R.Emulators.Panel_Blur.Enabled := True;

  Nes.Panel := TPanel.Create(Main_Form);
  Nes.Panel.Name := 'Nes';
  Nes.Panel.Parent := Main_Form;
  Nes.Panel.SetBounds(uDB_AUser.Local.SETTINGS.Resolution.Half_Width - 350, uDB_AUser.Local.SETTINGS.Resolution.Half_Height - 250, 700, 500);
  Nes.Panel.Visible := True;

  CreateHeader(Nes.Panel, 'IcoMoon-Free', #$e997, TAlphaColorRec.DeepSkyBlue, 'Install a nes emulator', false, nil);

  Nes.Main.Panel := TPanel.Create(Nes.Panel);
  Nes.Main.Panel.Name := 'Script_Nes_Install_Main';
  Nes.Main.Panel.Parent := Nes.Panel;
  Nes.Main.Panel.SetBounds(0, 30, Nes.Panel.Width, Nes.Panel.Height - 30);
  Nes.Main.Panel.Visible := True;

  Nes.Main.Image := TImage.Create(Nes.Panel);
  Nes.Main.Image.Name := 'Scritp_Nes_Install_Logo';
  Nes.Main.Image.Parent := Nes.Panel;
  Nes.Main.Image.SetBounds((Nes.Main.Panel.Width / 2 - 75), 35, 150, 60);
  Nes.Main.Image.Bitmap.LoadFromFile(ex_main.Paths.Config_Images.emu + 'consoles\nintendo_nes_logo.png');
  Nes.Main.Image.Visible := True;

  Nes.Main.Control := TTabControl.Create(Nes.Main.Panel);
  Nes.Main.Control.Name := 'Script_Nes_Install_Main_Control';
  Nes.Main.Control.Parent := Nes.Main.Panel;
  Nes.Main.Control.Align := TAlignLayout.Client;
  Nes.Main.Control.TabPosition := TTabPosition.None;
  Nes.Main.Control.Visible := True;

  for vi := 0 to 5 do
  begin
    Nes.Main.Tabs[vi] := TTabItem.Create(Nes.Main.Control);
    Nes.Main.Tabs[vi].Name := 'Script_Nes_Install_Main_Tab_' + vi.ToString;
    Nes.Main.Tabs[vi].Parent := Nes.Main.Control;
    Nes.Main.Tabs[vi].SetBounds(0, 0, Nes.Main.Control.Width, 400);
    Nes.Main.Tabs[vi].Visible := True;
  end;

  Create_Tab1;
  Create_Tab2;
  Create_Tab3;
  Create_Tab4_1;
  Create_Tab4_2;
  Create_Tab5;

  Nes.Main.Next := TButton.Create(Nes.Main.Panel);
  Nes.Main.Next.Name := 'Script_Nes_Install_Main_Next';
  Nes.Main.Next.Parent := Nes.Main.Panel;
  Nes.Main.Next.SetBounds(Nes.Main.Control.Width - 190, Nes.Main.Control.Height - 40, 140, 30);
  Nes.Main.Next.Text := 'Next';
  Nes.Main.Next.OnClick := ex_main.Input.mouse_script_consoles.Button.OnMouseClick;
  Nes.Main.Next.Visible := false;

  Nes.Main.Back := TButton.Create(Nes.Main.Panel);
  Nes.Main.Back.Name := 'Script_Nes_Install_Main_Back';
  Nes.Main.Back.Parent := Nes.Main.Panel;
  Nes.Main.Back.SetBounds((Nes.Main.Control.Width / 2) - 70, Nes.Main.Control.Height - 40, 140, 30);
  Nes.Main.Back.Text := 'Back';
  Nes.Main.Back.OnClick := ex_main.Input.mouse_script_consoles.Button.OnMouseClick;
  Nes.Main.Back.Visible := false;

  Nes.Main.Cancel := TButton.Create(Nes.Main.Panel);
  Nes.Main.Cancel.Name := 'Script_Nes_Install_Main_Cancel';
  Nes.Main.Cancel.Parent := Nes.Main.Panel;
  Nes.Main.Cancel.SetBounds(50, Nes.Main.Control.Height - 40, 140, 30);
  Nes.Main.Cancel.Text := 'Cancel';
  Nes.Main.Cancel.OnClick := ex_main.Input.mouse_script_consoles.Button.OnMouseClick;
  Nes.Main.Cancel.Visible := false;

  ShowButtons;
end;

procedure uEmulation_Consoles_Nes_Install_Free;
begin
  extrafe.prog.State := 'main_config_emulators';
  mainScene.Config.Main.Left_Blur.Enabled := false;
  mainScene.Config.Main.R.Emulators.Panel_Blur.Enabled := false;
  FreeAndNil(Nes.Panel);
  mainScene.Footer.Back_Blur.Enabled := false;
end;

procedure ShowButtons;
begin
  if Nes.Main.Status = 'phase_1' then
  begin
    Nes.Main.Next.Visible := True;
    Nes.Main.Back.Visible := false;
    Nes.Main.Cancel.Visible := True;
  end
  else if (Nes.Main.Status = 'phase_2') or (Nes.Main.Status = 'phase_3') or (Nes.Main.Status = 'phase_4_1') or
    (Nes.Main.Status = 'phase_4_2') then
  begin
    Nes.Main.Next.Visible := True;
    Nes.Main.Back.Visible := True;
    Nes.Main.Cancel.Visible := True;
  end
  else if Nes.Main.Status = 'final' then
  begin
    Nes.Main.Next.Visible := false;
    Nes.Main.Back.Visible := false;
    Nes.Main.Cancel.Visible := false;
  end;
end;

procedure uEmulation_Consoles_Nes_Slide_To_Next;
begin
  if Nes.Main.Status = 'phase_1' then
  begin
    Nes.Main.Control.SetActiveTabWithTransition(Nes.Main.Tabs[1], TTabTransition.Slide, TTabTransitionDirection.Normal);
    Nes.Main.Status := 'phase_2';
  end
  else if Nes.Main.Status = 'phase_2' then
  begin
    if Nes.Main.Choosen = 'Mame NES' then
    begin
      Nes.Main.Control.SetActiveTabWithTransition(Nes.Main.Tabs[2], TTabTransition.Slide, TTabTransitionDirection.Normal);
      Nes.Main.Status := 'phase_3';
    end
    else
      ShowMessage('Please Select an emulator with ready installation script');
  end
  else if Nes.Main.Status = 'phase_3' then
  begin
    if Nes.Main.Tab3.Radio_1.IsChecked then
    begin
      Nes.Main.Control.SetActiveTabWithTransition(Nes.Main.Tabs[3], TTabTransition.Slide, TTabTransitionDirection.Normal);
      Nes.Main.Status := 'phase_4_1';
    end
    else if Nes.Main.Tab3.Radio_2.IsChecked then
    begin
      Nes.Main.Control.SetActiveTabWithTransition(Nes.Main.Tabs[4], TTabTransition.Slide, TTabTransitionDirection.Normal);
      Nes.Main.Status := 'phase_4_2';
    end;
  end
  else if (Nes.Main.Status = 'phase_4_1') or (Nes.Main.Status = 'phase_4_2') then
  begin
    Nes.Main.Control.SetActiveTabWithTransition(Nes.Main.Tabs[5], TTabTransition.Slide, TTabTransitionDirection.Normal);
    Nes.Main.Status := 'final';
  end;
  ShowButtons;
end;

procedure uEmulation_Consoles_Nes_Slide_To_Previous;
begin
  if (Nes.Main.Status = 'phase_4_1') or (Nes.Main.Status = 'phase_4_2') then
  begin
    Nes.Main.Control.SetActiveTabWithTransition(Nes.Main.Tabs[2], TTabTransition.Slide, TTabTransitionDirection.Reversed);
    Nes.Main.Status := 'phase_3';
  end
  else if Nes.Main.Status = 'phase_3' then
  begin
    Nes.Main.Control.SetActiveTabWithTransition(Nes.Main.Tabs[1], TTabTransition.Slide, TTabTransitionDirection.Reversed);
    Nes.Main.Status := 'phase_2';
  end
  else if Nes.Main.Status = 'phase_2' then
  begin
    Nes.Main.Control.SetActiveTabWithTransition(Nes.Main.Tabs[0], TTabTransition.Slide, TTabTransitionDirection.Reversed);
    Nes.Main.Status := 'phase_1';
  end;
  ShowButtons;
end;

procedure Create_Tab1;
begin
  Nes.Main.Tab1.Box := TGroupBox.Create(Nes.Main.Tabs[0]);
  Nes.Main.Tab1.Box.Name := 'Script_Nes_Install_Main_Tab1_Box';
  Nes.Main.Tab1.Box.Parent := Nes.Main.Tabs[0];
  Nes.Main.Tab1.Box.SetBounds(10, 65, Nes.Main.Control.Width - 20, Nes.Main.Control.Height - 130);
  Nes.Main.Tab1.Box.Text := 'Welcome to ExtraFE wizard setup "Nes" emulator.';
  Nes.Main.Tab1.Box.Visible := True;

  Nes.Main.Tab1.Text := TALText.Create(Nes.Main.Tab1.Box);
  Nes.Main.Tab1.Text.Name := 'Script_Nes_Install_Main_Tab1_Text';
  Nes.Main.Tab1.Text.Parent := Nes.Main.Tab1.Box;
  Nes.Main.Tab1.Text.SetBounds(10, 40, Nes.Main.Tab1.Box.Width - 20, 60);
  Nes.Main.Tab1.Text.WordWrap := True;
  Nes.Main.Tab1.Text.TextIsHtml := True;
  Nes.Main.Tab1.Text.TextSettings.FontColor := TAlphaColorRec.White;
  Nes.Main.Tab1.Text.TextSettings.Font.Size := 14;
  Nes.Main.Tab1.Text.TextSettings.VertAlign := TTextAlign.Leading;
  Nes.Main.Tab1.Text.Text :=
    ' This action will "<font color="#ff63cbfc">install a Nes Emulator</font>" to "<font color="#ff63cbfc">ExtraFE</font>".' + #13#10 +
    ' If you wish to continue press next else press cancel.';
  Nes.Main.Tab1.Text.Visible := True;
end;

procedure Create_Tab2;
var
  vCount: Integer;
  vi: Integer;
begin
  Nes.Main.Tab2.Box := TGroupBox.Create(Nes.Main.Tabs[1]);
  Nes.Main.Tab2.Box.Name := 'Script_Nes_Install_Main_Tab2_Box';
  Nes.Main.Tab2.Box.Parent := Nes.Main.Tabs[1];
  Nes.Main.Tab2.Box.SetBounds(10, 65, Nes.Main.Control.Width - 20, Nes.Main.Control.Height - 130);
  Nes.Main.Tab2.Box.Text := 'Choose an emulator.';
  Nes.Main.Tab2.Box.Visible := True;

  Nes.Main.Tab2.List := TListBox.Create(Nes.Main.Tab2.Box);
  Nes.Main.Tab2.List.Name := 'Script_Nes_Install_Main_Tab2_Listbox';
  Nes.Main.Tab2.List.Parent := Nes.Main.Tab2.Box;
  Nes.Main.Tab2.List.SetBounds(10, 20, 250, Nes.Main.Tab2.Box.Height - 30);
  Nes.Main.Tab2.List.ItemIndex := -1;
  Nes.Main.Tab2.List.Visible := True;

  vCount := uDB.Query_Count(uDB.ExtraFE_Query_Local, 'consoles_nes_emus', '', '');

  SetLength(Nes.Main.Tab2.Items, vCount + 1);

  uDB.ExtraFE_Query_Local.Close;
  uDB.ExtraFE_Query_Local.SQL.Clear;
  uDB.ExtraFE_Query_Local.SQL.Text := 'SELECT Name FROM consoles_nes_emus ORDER BY Emu_ID Asc';
  uDB.ExtraFE_Query_Local.Open;

  vi := 0;
  while not uDB.ExtraFE_Query_Local.Eof do
  begin
    Nes.Main.Tab2.Items[vi] := TListBoxItem.Create(Nes.Main.Tab2.List);
    Nes.Main.Tab2.Items[vi].Name := 'Script_Nes_Install_Main_Tab2_Listbox_Item_' + vi.ToString;
    Nes.Main.Tab2.Items[vi].Parent := Nes.Main.Tab2.List;
    Nes.Main.Tab2.Items[vi].Text := uDB.ExtraFE_Query_Local.Fields[0].AsString;
    Nes.Main.Tab2.Items[vi].OnClick := ex_main.Input.mouse_script_consoles.ListBoxItem.OnClick;
    Nes.Main.Tab2.Items[vi].Visible := True;

    inc(vi);
    uDB.ExtraFE_Query_Local.Next;
  end;

  Nes.Main.Tab2.Image := TImage.Create(Nes.Main.Tab2.Box);
  Nes.Main.Tab2.Image.Name := 'Script_Nes_Install_Main_Tab2_Image';
  Nes.Main.Tab2.Image.Parent := Nes.Main.Tab2.Box;
  Nes.Main.Tab2.Image.SetBounds(280, 20, 380, 180);
  Nes.Main.Tab2.Image.WrapMode := TImageWrapMode.Fit;
  Nes.Main.Tab2.Image.Visible := True;

  Nes.Main.Tab2.Memo := TMemo.Create(Nes.Main.Tab2.Box);
  Nes.Main.Tab2.Memo.Name := 'Script_Nes_Install_Main_Tab2_Memo';
  Nes.Main.Tab2.Memo.Parent := Nes.Main.Tab2.Box;
  Nes.Main.Tab2.Memo.SetBounds(280, 215, 380, 90);
  Nes.Main.Tab2.Memo.WordWrap := True;
  Nes.Main.Tab2.Memo.Text := '';
  Nes.Main.Tab2.Memo.Visible := True;

  Nes.Main.Tab2.Status := TALText.Create(Nes.Main.Tab2.Box);
  Nes.Main.Tab2.Status.Name := 'Script_Nes_Install_Main_Tab2_Status';
  Nes.Main.Tab2.Status.Parent := Nes.Main.Tab2.Box;
  Nes.Main.Tab2.Status.SetBounds(Nes.Main.Tab2.Box.Width - 220, Nes.Main.Tab2.Box.Height - 40, 200, 30);
  Nes.Main.Tab2.Status.TextIsHtml := True;
  Nes.Main.Tab2.Status.Color := TAlphaColorRec.White;
  Nes.Main.Tab2.Status.Text := '';
  Nes.Main.Tab2.Status.TextSettings.HorzAlign := TTextAlign.Trailing;
  Nes.Main.Tab2.Status.Visible := True;

end;

procedure uEmulation_Consoles_Nes_ShowEmulatorInfo(vName: String);
var
  vImg: FMX.Graphics.TBitmap;
  vText: String;
  vStatus: String;
begin

  uDB.ExtraFE_Query_Local.Close;
  uDB.ExtraFE_Query_Local.SQL.Clear;
  uDB.ExtraFE_Query_Local.SQL.Text := 'SELECT * FROM consoles_nes_emus WHERE Name=''' + vName + '''';
  uDB.ExtraFE_Query_Local.Open;

  vImg := FMX.Graphics.TBitmap.Create;

  vImg.Assign(uDB.ExtraFE_Query_Local.FieldByName('Image'));

  vText := uDB.ExtraFE_Query_Local.FieldByName('Text').AsString;
  vStatus := uDB.ExtraFE_Query_Local.FieldByName('Status').AsString;
  if vStatus <> 'Full' then
    Nes.Main.Next.Enabled := False
  else
    Nes.Main.Next.Enabled := True;

  vStatus := 'Status : ' + vStatus;

  Nes.Main.Tab2.Image.Bitmap := vImg;
  Nes.Main.Tab2.Memo.Text := vText;
  Nes.Main.Tab2.Status.Text := vStatus;

  Nes.Main.Tab3.Radio_1.Text := 'Install "' + Nes.Main.Choosen + '" to ExtaFE from computer';
  Nes.Main.Tab3.Radio_2.Text := 'Install "' + Nes.Main.Choosen + '" to ExtaFE from "ExtraFE Server".';
  Nes.Main.Tab4_1.Box.Text := 'Install "' + Nes.Main.Choosen + '" from computer.';
  Nes.Main.Tab4_1.Edit_Info.Text := 'Find the executable file of  "' + Nes.Main.Choosen + '" emulator.';
  Nes.Main.Tab5.Text.Text := ' Installation of "<font color="#ff63cbfc">' + Nes.Main.Choosen + '</font>" is completed.' + #13#10 +
    '   Close and enjoy the thousands retro games of Nintendo NES.' + #13#10 + '   P.S. You must have the roms to play, ExtraFE provide no roms.';
end;

