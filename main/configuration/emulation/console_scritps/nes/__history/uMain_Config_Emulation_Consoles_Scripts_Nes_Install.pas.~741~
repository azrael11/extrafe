procedure Create_Tab5;
begin
  Nes.Main.Tab5.Box := TGroupBox.Create(Nes.Main.Tabs[5]);
  Nes.Main.Tab5.Box.Name := 'Script_Nes_Install_Main_Tab5_Box';
  Nes.Main.Tab5.Box.Parent := Nes.Main.Tabs[5];
  Nes.Main.Tab5.Box.SetBounds(10, 10, Nes.Main.Control.Width - 20, 200);
  Nes.Main.Tab5.Box.Text := 'Congratulatinos';
  Nes.Main.Tab5.Box.Visible := True;

  Nes.Main.Tab5.Text := TALText.Create(Nes.Main.Tab5.Box);
  Nes.Main.Tab5.Text.Name := 'Script_Nes_Install_Main_Tab5_Text';
  Nes.Main.Tab5.Text.Parent := Nes.Main.Tab5.Box;
  Nes.Main.Tab5.Text.SetBounds(10, 40, Nes.Main.Tab5.Box.Width - 20, 60);
  Nes.Main.Tab5.Text.WordWrap := True;
  Nes.Main.Tab5.Text.TextIsHtml := True;
  Nes.Main.Tab5.Text.TextSettings.FontColor := TAlphaColorRec.White;
  Nes.Main.Tab5.Text.TextSettings.Font.Size := 14;
  Nes.Main.Tab5.Text.TextSettings.VertAlign := TTextAlign.Leading;
  Nes.Main.Tab5.Text.Visible := True;

  Nes.Main.Tab5.Close := TButton.Create(Nes.Main.Tab5.Box);
  Nes.Main.Tab5.Close.Name := 'Script_Nes_Install_Main_Tab5_Close';
  Nes.Main.Tab5.Close.Parent := Nes.Main.Tab5.Box;
  Nes.Main.Tab5.Close.SetBounds((Nes.Main.Control.Width / 2) - 70, Nes.Main.Control.Height - 80, 140, 40);
  Nes.Main.Tab5.Close.Text := 'Close and enjoy';
  Nes.Main.Tab5.Close.OnClick := ex_main.Input.mouse_script_consoles.Button.OnMouseClick;
  Nes.Main.Tab5.Close.Visible := True;
end;

procedure uEmulation_Consoles_Nes_Installation;
begin
  Nes.Main.Tab4_1.Edit.Visible := false;
  Nes.Main.Tab4_1.Progress.Visible := True;
  Nes.Main.Back.Enabled := false;
  Nes.Main.Cancel.Enabled := false;
  Nes.Main.Next.Enabled := false;
  Nes.Main.Tab4_1.Start.Visible := false;
  Nes.Main.Tab4_1.Find.Visible := false;
  Nes.Main.Tab4_1.Edit_Info.Text := 'Start the installation.';

  nes.Mame.Name := ExtractFileName(Nes.Main.Tab4_1.Edit.Text);
  nes.Mame.Path := ExtractFilePath(Nes.Main.Tab4_1.Edit.Text);

  // Create mame ini if dont exist
  if not FileExists(nes.Mame.Path + 'mame.ini') then
    ShellExecute(0, nil, 'cmd.exe', PChar('/C ' + AnsiQuotedStr(nes.Mame.Path + nes.Mame.Name, Char(34)) + ' -cc'), PChar(nes.Mame.Path), SW_HIDE);
  nes.Mame.p_Ini_Path := nes.Mame.Path;

  Nes.Main.Tab4_1.Progress.Value := 20;
  Application.ProcessMessages;

  nes.Mame.Database := extrafe.prog.Path + 'emu\consoles\nes\database\';
  ShellExecute(0, nil, 'cmd.exe', PChar('/C ' + AnsiQuotedStr(nes.Mame.Path + nes.Mame.Name, Char(34)) + ' nes -glist > ' + nes.Mame.Database +
    'mame_data_games.xml'), nil, SW_HIDE);

  Nes.Main.Tab4_1.Progress.Value := 40;
  Application.ProcessMessages;

  if emulation.Level = 0 then
    emulation.Selection_Tab[2].Logo_Gray.Enabled := false;
  inc(emulation.Category[2].Second_Level, 1);
  Nes.Main.Tab4_1.Progress.Value := 100;
  Nes.Main.Tab4_1.Edit_Info.Text := 'Installation complete. Click next to start using it.';

  emulation.emu[2, 8] := 'active';
  emulation.Consoles[8].Installed := True;

  // Clear and create the main control tab
  uMain_Emulation.Clear_Selection_Control;
  uMain_Emulation.Create_Selection_Control;
  uMain_Emulation.Category(2, 0);

  FreeAndNil(mainScene.Config.Main.R.Emulators.Consoles[8].Panel);
  uMain_Config_Emulators.CreateConsolesPanel(8);

  Nes.Main.Cancel.Visible := false;
  Nes.Main.Back.Visible := false;
  Nes.Main.Next.Enabled := True;
end;

{ TMAIN_NES_INSTALL_DIALOG }

procedure TMAIN_NES_INSTALL_DIALOG.OnClose(Sender: TObject);
begin
  Nes.Main.Emu_Path := Nes.Main.Tab4_1.Open_Dialog.FileName;
  Nes.Main.Tab4_1.Start.Visible := True;
  Nes.Main.Tab4_1.Edit.Text := Nes.Main.Emu_Path;
end;

initialization

Nes.Main.Dialog := TMAIN_NES_INSTALL_DIALOG.Create;

finalization

Nes.Main.Dialog.Free;

end.
