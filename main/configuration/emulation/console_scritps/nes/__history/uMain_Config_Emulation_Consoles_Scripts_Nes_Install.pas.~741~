procedure uEmulation_Consoles_Nes_Installation;

const
  cNes_Emu_Image: array [0 .. 3] of string = ('punes.png', 'ines.png', 'nestopia.png', 'mame_nes.png');

var
  Nes: TEMU_NES_INSTALL;

